<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
        

       <beans>
        	<bean id="emp" class="com.entity.Employee">
        		<constructor-arg index = "0" value="1000"></constructor-arg>
        		<constructor-arg index = "1" value="Ruturaj"></constructor-arg>
        		<constructor-arg index = "2" value="Akurdi"></constructor-arg>
        		<constructor-arg index = "3" ref="dept"></constructor-arg>
        	</bean>
        	
        	<bean id = "dept" class = "com.entity.Department">
        		<constructor-arg index="0" value="20"></constructor-arg>
        		<constructor-arg index="1" value="Java Developer"></constructor-arg>
        	</bean>
        </beans>